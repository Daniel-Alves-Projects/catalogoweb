CREATE TABLE produtos (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(255) NOT NULL,
    descricao TEXT,
    ficha_tecnica VARCHAR(255),
    imagem1 VARCHAR(255),
    imagem2 VARCHAR(255),
    imagem3 VARCHAR(255)
);




